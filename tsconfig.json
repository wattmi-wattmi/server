{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "paths": {
        "@src/*" : ["src/*"],
    }, 
  },
  "include": [ "src/**/*", "custom.d.ts" ],
  "exclude": [
    "node_modules"
  ]
}