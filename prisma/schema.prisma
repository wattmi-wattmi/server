datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/generated"
}

model User {
  id             Int                @id @default(autoincrement())
  username       String             @unique
  password       String
  name           String?
  region         String?
  interests      String?
  gender         String
  about_me       String?
  status_message String?
  profile        String?
  age            Int?
  active_now     Boolean            @default(false)
  chat_rooms     Chat_Room_Member[]
  messages       Message[]

  @@map("users")
}

model Chat_Room {
  id         Int                @id @default(autoincrement())
  name       String?
  is_group   Boolean            @default(false)
  created_at DateTime           @default(now())
  members    Chat_Room_Member[]
  messages   Message[]

  @@map("chat_rooms")
}

model Chat_Room_Member {
  id           Int       @id @default(autoincrement())
  chat_room_id Int
  chat_room    Chat_Room @relation(fields: [chat_room_id], references: [id])
  user_id      Int
  user         User      @relation(fields: [user_id], references: [id])

  @@map("chat_room_members")
}

model Message {
  id           Int       @id @default(autoincrement())
  content      String
  created_at   DateTime  @default(now())
  edited_at    DateTime?
  deleted_at   DateTime?
  chat_room_id Int
  chat_room    Chat_Room @relation(fields: [chat_room_id], references: [id])
  sender_id    Int
  sender       User      @relation(fields: [sender_id], references: [id])

  @@map("messages")
}
